<%- include('../partials/header.ejs')%>
    <div class="grid">
        <div class="message">
            <div class="message-content">
                <h1>Sell with Vinyl Vibes!</h1>
                <p>Got vinyl you'd like to sell? No problem!</p>
            </div>
        </div>
        <div class="form">
            <form action="/vinyls" method="POST" enctype="multipart/form-data">
                <label for="condition">Condition</label>
                <select id="condition" name="condition" required>
                    <option value="" disabled selected>Select a condition</option>
                    <option value="New">New</option>
                    <option value="Like New">Like New</option>
                    <option value="Very Good">Very Good</option>
                    <option value="Good">Good</option>
                    <option value="Other">Other</option>
                </select>
                
            
                <label for="title">Title</label><br>
                <input type="text" id="title" name="title" required>
            
                <label for="seller">Seller</label><br>
                <input type="text" id="seller" name="seller" required>
            
                <label for="price">Price</label><br>
                <input type="number" id="price" name="price" step="0.01" required><br>

            
                <label for="details">Details</label><br>
                <textarea id="details" name="details" rows="4" cols="50" required></textarea>
            
                <label for="imageUpload">Upload an Image</label><br>
                <input type="file" id="imageUpload" name="imageUpload" accept="image/*" required><br>
            
                <input type="submit" value="Submit">
            </form>
            
        </div>
        
    </div>
<%- include('../partials/footer.ejs')%>